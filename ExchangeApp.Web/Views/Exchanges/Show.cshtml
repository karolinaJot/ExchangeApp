@model ItemModel

<h2>You don't know what to do with your old or non use things? Let exchange it!</h2>
<br />
<h3>Add new item</h3>

@using (Html.BeginForm())
{
	<div class="form-group">
		@Html.LabelFor(x => x.Name, "Item name")
		@Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
	</div>
	<div class="form-group">
		@Html.LabelFor(x => x.Description, "Describe your item")
		@Html.TextAreaFor(x => x.Description, new { @class = "form-control" })
	</div>
	<div class="form-group form-check">
		@Html.CheckBoxFor( x => x.IsVisible, new { @class = "form-check-input" })
		@Html.LabelFor( x => x.IsVisible, "Visible?", new { @class = "from-check-label"})
	</div>
	<div class="form-group">
		<button type="submit" class="btn btn-primary">Add item</button>
	</div>
}